{
    "name": "@humanspeak/svelte-satori-fix",
    "version": "0.0.1",
    "description": "Normalize dimension values for Satori (img/svg) in Svelte/SvelteKit to prevent validation errors when generating OG images.",
    "keywords": [
        "svelte",
        "sveltekit",
        "satori",
        "satori-html",
        "opengraph",
        "og",
        "image",
        "renderer",
        "resvg",
        "svg",
        "html",
        "dimensions",
        "width",
        "height",
        "utilities"
    ],
    "homepage": "https://github.com/humanspeak/svelte-satori-fix",
    "bugs": {
        "url": "https://github.com/humanspeak/svelte-satori-fix/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/humanspeak/svelte-satori-fix.git"
    },
    "funding": {
        "type": "github",
        "url": "https://github.com/sponsors/humanspeak"
    },
    "license": "MIT",
    "author": "Humanspeak, Inc.",
    "sideEffects": [
        "**/*.css"
    ],
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "svelte": "./dist/index.js"
        }
    },
    "svelte": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist",
        "!dist/**/*.test.*",
        "!dist/**/*.spec.*"
    ],
    "scripts": {
        "build": "vite build && npm run prepack",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "dev": "vite dev",
        "format": "prettier --write .",
        "husky": "husky",
        "lint": "prettier --check . && eslint .",
        "prepack": "svelte-kit sync && svelte-package && publint",
        "prepare": "svelte-kit sync || echo ''",
        "preview": "vite preview",
        "test": "npm run test:unit -- --run",
        "test:unit": "vitest --coverage"
    },
    "devDependencies": {
        "@eslint/compat": "^1.3.2",
        "@eslint/js": "^9.35.0",
        "@sveltejs/adapter-auto": "^6.1.0",
        "@sveltejs/kit": "^2.37.0",
        "@sveltejs/package": "^2.5.0",
        "@sveltejs/vite-plugin-svelte": "^6.1.4",
        "@vitest/coverage-v8": "3.2.4",
        "eslint": "^9.35.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-svelte": "^3.12.1",
        "globals": "^16.3.0",
        "husky": "^9.1.7",
        "prettier": "^3.6.2",
        "prettier-plugin-organize-imports": "^4.2.0",
        "prettier-plugin-sort-json": "^4.1.1",
        "prettier-plugin-svelte": "^3.4.0",
        "publint": "^0.3.12",
        "svelte": "^5.38.7",
        "svelte-check": "^4.3.1",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.42.0",
        "vite": "^7.1.4",
        "vitest": "^3.2.4"
    },
    "peerDependencies": {
        "svelte": "^5.0.0"
    },
    "publishConfig": {
        "access": "public"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "esbuild"
        ]
    },
    "tags": [
        "svelte",
        "satori",
        "opengraph"
    ]
}
